<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sopt.hajeong.auth.AddMusicActivity">

    <ImageView
        android:id="@+id/iv_music_pic"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/hj"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="title: "
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@id/et_music_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/iv_music_pic"
        app:layout_constraintTop_toBottomOf="@id/iv_music_pic" />

    <EditText
        android:id="@+id/et_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toEndOf="@id/tv_music_title"
        app:layout_constraintTop_toBottomOf="@id/iv_music_pic"
        tools:text="12월 24일" />

    <TextView
        android:id="@+id/tv_music_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="singer: "
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@id/et_music_singer"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/tv_music_title"
        app:layout_constraintTop_toBottomOf="@id/tv_music_title" />

    <EditText
        android:id="@+id/et_music_singer"
        android:layout_width="wrap_content"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_music_singer"
        app:layout_constraintTop_toBottomOf="@id/et_music_title"
        tools:text="d.ear"/>

    <Button
        android:id="@+id/btn_add_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add music"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_singer" />

    <Button
        android:id="@+id/btn_music_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="music List"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_music" />

</androidx.constraintlayout.widget.ConstraintLayout>